<% content_for :title do %>
  Login
<% end %>



<div class="row">
	<div class="small-6 columns">
		<h2>Los Angeles Controller's Office Audits<br><strong>Log In</strong></h2>
		<div class="AdminSectionSpacer"></div>

		<% if flash[:notice] %>
				<div data-alert class="alert-box success round">
			  	<%= flash[:notice] %>
				  <a href="#" class="close">&times;</a>
				</div>
		<% end %>

		<% if flash[:error] %>
				<div data-alert class="alert-box warning round">
			  	<%= flash[:error] %>
				  <a href="#" class="close">&times;</a>
				</div>
		<% end %>

		<%= form_tag url: '/login', method: 'post' do %>
			<%= label_tag(:email, "Email") %>
			<%= email_field_tag :email, '', placeholder: 'email'%>
			<%= label_tag(:Password, "Password") %>
			<%= password_field_tag :password, '', placeholder: 'password' %>
			<%= submit_tag 'login', class: "small radius success button" %>

		<% end %>


	</div>
</div>


