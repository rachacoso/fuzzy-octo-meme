<!-- Key Findings Form BEGIN -->

<h1> Key Findings for the Five Minute Summary </h1>

<%= form_tag(content_block_keyfindings_helper_path, method: "post") do %>

  <%= label_tag(:number, "Number") %>
  <%= text_field_tag(:number) %>
  
  <%= label_tag(:headline, "Headline") %>
  <%= text_field_tag(:headline) %>

  <%= label_tag(:fulltext, "Full Text") %>
  <%= text_area_tag(:fulltext, "", placeholder: "Full Text Goes Here", size: "x10") %>

    <div class="row">
      <div class="small-3 columns">
        <%= submit_tag("Submit", class: "small radius success button") %>
      </div>
      <div class="small-3 columns end">
       <a href="#" class="close-reveal-modal my-modal custom-reveal-class">Cancel</a>
     </div>
   </div>
<% end %>
</form>

<!-- Key Findings Form END -->