<% content_for :title do %>
  New Block - Five Minute Summary for <%= @section.five_minute_summary.audit.name %>
<% end %>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<% if @errors %>
	<p>
	<% @errors.each do |k,v| %>
		<%= k %> <%= v %><br>
	<% end %>
	</p>
<% end %>

<%= form_for @newblock, url: new_content_block_url(@section.id, @position) do |f| %>
	
	<%= f.text_area :content %>

	<%= f.submit %> <%= link_to 'Cancel', @section.five_minute_summary %>


<% end %>