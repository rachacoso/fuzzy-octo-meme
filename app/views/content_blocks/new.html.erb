<% content_for :title do %>
  New Block - Five Minute Summary for <%= @auditname %>
<% end %>



<div class="row">
	<div class="small-12 small-centered columns">
		<h4> New <strong>Content Block</strong></h4>
		<% if flash[:alert] %>
			<div data-alert class="alert-box alert round">
		  	<%= flash[:alert] %>
			  <a href="#" class="close">&times;</a>
			</div>
		<% end %>
		<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
		<% end %>
		<% if @errors %>
			<p>
			<% @errors.each do |k,v| %>
				<%= k %> <%= v %><br>
			<% end %>
			</p>
		<% end %>



		<%= form_for @newblock, url: new_content_block_url(@section.id, @position) do |f| %>
			
			
			<%= f.cktext_area :content, rows: "18", class: "resizeable", :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini', :removeButtons => 'Image,Flash,Smiley,Styles,Font', :templates_files => [ '/assets/ckeditor/mytemplates.js' ], :allowedContent => true} , :required => true %>
			<br>
			<%= f.submit 'Add new block', class: "tiny radius success button" %> <%= link_to 'Cancel (Discard changes)', @linkto, class: "tiny radius info button"  %>

		<% end %>

	<%= render partial: 'helpers' %>



<!-- BEGIN SECTION SPACER -->
<div class="RASectionSpacer">

</div>
<!-- END SECTION SPACER -->

<% content_for :admin_footer do %>
<div id="adminfooter">
	<div class="wrap">
		<div class="row">


			<div class="small-3 columns leftadminmenu">
				<div class="small-3 columns text-left">
					<%= link_to @linkto do %>
						<small><strong>Cancel</strong><br> (Discard changes)</small>
					<% end %>
				</div>
				<div class="small-9 columns text-left">
					<%= @audit_typename %> | New Content Block <strong><%= simple_format(@auditname, {}, wrapper_tag: "div").gsub(/\n/, '').html_safe %></strong>
				</div>
			</div>

			<div class="small-9 columns rightadminmenu">
				<div class="small-2 columns text-left inactive">
					View<br><strong>Five Minute Summary</strong>
				</div>
				<div class="small-2 columns text-left inactive">
					Edit<br><strong>Five Minute Summary</strong>
				</div>
				<div class="small-2 columns text-left inactive">
					View<br><strong>Full Audit</strong>
				</div>
				<div class="small-2 columns text-left inactive">
					Edit<br><strong>Full Audit</strong>
				</div>
				<div class="small-1 columns text-left inactive">
					Media<br><strong>Library</strong>
				</div>
				<div class="small-3 columns text-right">
					Los Angeles Controller <strong>Audits</strong><br>
					Welcome, <strong><%= @current_user.email %></strong><br>
					<%= link_to 'Logout', logout_url %>
				</div>		
			</div>

		</div>
	</div>
</div>
<% end %>




