<% content_for :title do %>
  Edit Audit - <%= @audit.name %>
<% end %>


<div class="row">
  <div class="small-10 small-centered columns">

    <%= form_for @audit, url: audit_url do |f| %>
    <%= hidden_field_tag 'subtype', @subtype %>
      <div class="backpanel">
      <div class="headWrapper topHead">
        <div class="row" id="WPtop">
          <div class="small-10 columns small-centered RAmargintop">
            <div class="headback">
              <div class="row">
                <div class="small-12 columns">
                  <%= f.text_area :name, rows: 5, style: "font-size:2em; font-weight:bold;" %>
                </div>
              </div>
              <h3>&mdash; Five Minute Summary &mdash;</h3>
              <div class="row">
                <div class="small-4 columns">
                  <%= f.date_field :publication_date, width: '10' %>
                </div>
                <div class="small-8 columns">
                  <object type="image/svg+xml" data="/img/RGsig.svg" width="275" class="rgsig">
                    RG Signature <!-- fallback image in CSS -->
                  </object>
                </div>
              </div>
              <!-- <h3>Ron Galperin <small>City Controller</small></h3> -->
            </div>
          </div>
        </div>
      </div>
      </div>
      <%= f.submit 'Update', class: "tiny radius success button" %> <%= link_to 'Cancel (Discard changes)', @linkback, class: "tiny radius info button" %>
    <% end %>
	
  </div>
</div>


<!-- BEGIN SECTION SPACER -->
<div class="RASectionSpacer">

</div>
<!-- END SECTION SPACER -->
<% content_for :admin_footer do %>

<div id="adminfooter">
  <div class="wrap">
    <div class="row">


      <div class="small-3 columns leftadminmenu">
        <div class="small-3 columns text-right">
          <%= link_to @linkback do %>
            <small><strong>Cancel</strong><br> (Discard changes)</small>
          <% end %>
        </div>
        <div class="small-9 columns text-left">
          <%= @audit_typename %> | Edit Audit Title / Date <strong><%= simple_format(@audit.name, {}, wrapper_tag: "div").gsub(/\n/, '').html_safe %></strong>
        </div>
      </div>

      <div class="small-9 columns rightadminmenu">
        <div class="small-2 columns text-left inactive">
          View<br><strong>Five Minute Summary</strong>
        </div>
        <div class="small-2 columns text-left inactive">
          Edit<br><strong>Five Minute Summary</strong>
        </div>
        <div class="small-2 columns text-left inactive">
          View<br><strong>Full Audit</strong>
        </div>
        <div class="small-2 columns text-left inactive">
          Edit<br><strong>Full Audit</strong>
        </div>
        <div class="small-1 columns text-left inactive">
          Media<br><strong>Library</strong>
        </div>
        <div class="small-3 columns text-right">
          Los Angeles Controller <strong>Audits</strong><br>
          Welcome, <strong><%= @current_user.email %></strong><br>
          <%= link_to 'Logout', logout_url %>
        </div>    
      </div>

    </div>
  </div>
</div>

<% end %>

