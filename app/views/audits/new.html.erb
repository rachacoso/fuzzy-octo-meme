
<div class="row">
	<div class="small-9 small-centered columns">

		<h2>Create<br><strong>Audit</strong></h2>
		<div class="AdminSectionSpacer"></div>

		<% if flash[:notice] %>
			<div data-alert class="alert-box alert round">
		  	<%= flash[:notice] %>
			  <a href="#" class="close">&times;</a>
			</div>
		<% end %>
		<% if @errors %>
			<div data-alert class="alert-box warning radius">
				<strong>Here's Why:</strong><br>		
					<% @errors.each do |k,v| %>
						<%= k %> <%= v %><br>
					<% end %>
			  <a href="#" class="close">&times;</a>
			</div>
		<% end %>

		<div class="row">
			<div class="small-6 columns">
				<%= form_for @audit do |f| %>
					<%= f.text_area :name, cols: 20, rows: 5 %>
					<%= f.label :publication_date %>
					<%= f.date_field :publication_date %>
					<%= f.submit 'Create New Audit', class: "tiny radius success button" %> <%= link_to 'Cancel', audits_path, class: "tiny radius info button"  %>

				<% end %>
			</div>
		</div>

	</div>
</div>


<% content_for :admin_footer do %>

	<div class="small-1 columns text-right">
    <%= link_to audits_url do %>
      View All<br><strong>Audits</strong> 
    <% end %>
	</div>
	<div class="small-1 columns text-right end admin-nav-active">
				Create<br>
		<strong>Audit</strong> 
	</div>


<% end %>


