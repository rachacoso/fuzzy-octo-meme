
<div class="row">
	<div class="small-9 small-centered columns">

		<% if flash[:notice] %>
			<div data-alert class="alert-box alert round">
		  	<%= flash[:notice] %>
			  <a href="#" class="close">&times;</a>
			</div>
		<% end %>
		<% if @errors %>
			<div data-alert class="alert-box warning radius">
				<strong>Here's Why:</strong><br>		
					<% @errors.each do |k,v| %>
						<%= k %> <%= v %><br>
					<% end %>
			  <a href="#" class="close">&times;</a>
			</div>
		<% end %>

		<div class="row">
			<div class="small-5 columns">
				<%= form_for @audit do |f| %>
					<%= f.text_area :name, cols: 20, rows: 5 %>
					<%= f.label :publication_date %>
					<%= f.date_field :publication_date %>
					<%= f.submit 'Create New Audit', class: "tiny radius success button" %> <%= link_to 'Cancel', audits_path, class: "tiny radius info button"  %>

				<% end %>
			</div>
		</div>

	</div>
</div>

<!-- BEGIN SECTION SPACER -->
<div class="RASectionSpacer">

</div>
<!-- END SECTION SPACER -->
<div id="adminfooter">
	<div class="wrap">
		<div class="row">
			<div class="small-3 columns text-right">
				Create a new<br>
				<strong>Audit</strong> 
			</div>
			<div class="small-9 columns text-left">
				<%= link_to audits_path do %>
					<i class="fi-arrow-left" ></i> Cancel
				<% end %>
			</div>
		</div>
	</div>
</div>

